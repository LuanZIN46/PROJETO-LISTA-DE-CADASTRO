@{
    ViewData["Title"] = "Editar contatos";
}


<div class="text-center">

    <h1 class="display-4">Editar Contatos</h1>

</div>

<form>
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do seu Contato">
    </div>

    <div class="mb-3">
        <label for="Email">E-Mail</label>
        <input type="text" class="form-control" placeholder="Digite o E-Mail do Contato">
    </div>

    <div class="mb-3">
        <label for="celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o celular do Contato">
    </div>

    <button type="submit" class="btn btn-primary w-100 mb-2">Alterar</button>
    <a class="btn btn-secondary w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
